<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>chm_model_folder</param-name>
       <!-- <param-value>C:\Users\wawong\Desktop\chm_models</param-value>  -->
      <!-- <param-value>/Users/ncmir/NetBeansProjects/CCDBSlashChmService/testdata</param-value> -->
      <!-- <param-value>/RAID10/data/slash/chm_models</param-value> -->
      <param-value>C:\chm_models\models</param-value>
    </context-param>
    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>edu.ucsd.ccdb.segmentation.chm.rest</param-value>
        </init-param>
       <!-- <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>  -->
    </servlet>
    <!-- Any requests going to URL ../rest/* should be handled by Jersey -->   
    
    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    
    
    
    
    
    <servlet>
        <servlet-name>ChmModelDownloadServlet</servlet-name>
        <servlet-class>edu.ucsd.ccdb.segmentation.chm.servlet.ModelDownloadServlet</servlet-class>
    </servlet>
    <!-- Any requests going to URL ../rest/* should be handled by Jersey -->   
    
    <servlet-mapping>
        <servlet-name>ChmModelDownloadServlet</servlet-name>
        <url-pattern>/ChmModelDownloadServlet</url-pattern>
    </servlet-mapping>
    
    
    
</web-app>
